<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.brayadiaz.calculadora.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="40sp"
                android:id="@+id/resul"/>
        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:textSize="40sp"
            android:id="@+id/acomulado"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="1"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b1"
                android:onClick="N1"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="2"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b2"
                android:onClick="N2"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="3"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b3"
                android:onClick="N3"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="+"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/bSum"
                android:onClick="NSum"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="4"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b4"
                android:onClick="N4"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b5"
                android:onClick="N5"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="6"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b6"
                android:onClick="N6"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="-"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/bRes"
                android:onClick="NRes"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b7"
                android:onClick="N7"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="8"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b8"
                android:onClick="N8"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b9"
                android:onClick="N9"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="*"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/bMul"
                android:onClick="NMul"
                android:layout_margin="1dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="."
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/bPun"
                android:onClick="NPun"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/b0"
                android:onClick="N0"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="="
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/bIgual"
                android:onClick="NIgual"
                android:layout_margin="1dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:text="/"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:background="@color/greedDark"
                android:id="@+id/bDiv"
                android:onClick="NDiv"
                android:layout_margin="1dp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
